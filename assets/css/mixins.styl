centerHeader()
  group()
  margin: 10px 80px
  relative: top 0px right 40px
  border-bottom: solid 1px lightGrey
  height: 35px
  width: center-size - 40
  h1
    display: block
    font-weight: normal
    float: left
    height: 35px
    margin: 0px 10px
    color: darkGrey
  ul.sorter
      absolute: top 0px right 20px
      height: 30px
      tight()
      li
        display: visible
        size: 55px 20px
        padding: 0px 0px 0px 0px
        float: left
        line-height: 45px
        button
          border: none
          color: #666
          background: none
        &:hover
          color: #999
        &:nth-child(2)
          color: #888
      .more-sort
        width: 110px
        overflow-y: hidden
        li
          @extends ul.sorter li
         



