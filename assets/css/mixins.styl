centered(horizontal = true, vertical = false)
  if horizontal
    if @width is defined
      left: 50%
      margin-left: -(@width  / 2)
    else
      margin-left: auto
      margin-right: auto
  if vertical
    if @height is defined   
      top: 50%
      margin-top: -(@height / 2)
    else
      top: 50%


tight()
  margin: 0px 0px
  padding: 0px 0px

updownButton()
  display: block
  background: none
  border: none
  margin: 0 auto


navBar(n = 3, w = 150px, h = 30px)
  group()
  fixed: top 0px left 0px
  height: h
  width: 100%
  background: red
  z-index: 100
  -webkit-font-smoothing: antialiased
  ul
    inline-list(spacing = 0px)
    padding: 4px 0px 6px 0px
    color: #a8a9ab
    font-size: 18px
    height: h - 10
    li
      text-align: center
      padding: 0px 40px
      a
        color: #a8a9ab
        font-weight: 400
        font-family: 'Helvetica Neue', sans-serif
        text-decoration: none
        transition()
        &:hover
          color: #8e8e8e
      .selected
        color: lighten(#8e8e8e, 50%)
			


